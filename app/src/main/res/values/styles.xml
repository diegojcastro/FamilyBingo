<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Text styles -->
    <style name="BoardTitleText">

    </style>

    <!-- TextView Styles -->
    <style name="CheckedField" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bingoboard_fieldbackground_checked</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="colorAccent">@color/selected_green_color</item>
    </style>

    <style name="MissedField" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bingoboard_fieldbackground_missed</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="colorAccent">@color/selected_red_color</item>
    </style>

    <style name="DefaultField" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bingoboard_fieldbackground_bordered</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <!-- Button Styles -->
    <style name="GoButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/ok_green_color</item>
        <item name="colorButtonNormal">@color/ok_green_color</item>
        <item name="colorControlHighlight">@color/selected_green_color</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="colorAccent">@color/selected_green_color</item>
    </style>

    <style name="MissedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/skip_red_color</item>
        <item name="colorButtonNormal">@color/skip_red_color</item>
        <item name="colorControlHighlight">@color/selected_red_color</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="colorAccent">@color/selected_red_color</item>
    </style>

    <style name="SkipButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textColor">@color/grey_button_color</item>
        <item name="colorControlHighlight">@color/skip_red_color</item>
    </style>

    <style name="BoardSetupTextField" parent="Widget.AppCompat.TextView">
        <item name="colorPrimary">@color/cardview_light_background</item>
    </style>

    <style name="DebugButton" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/selected_red_color</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>


</resources>